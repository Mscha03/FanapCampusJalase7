<?xml version="1.0" encoding="UTF-8"?>
<!--find this xml in https://howtodoinjava.com/log4j2/log4j2-xml-configuration-example/ -->
        <!-- Extra logging related to initialization of Log4j.
         Set to debug or trace if log4j initialization is failing. -->

<Configuration status="warn">
    <Appenders>
        <!-- Log in Console -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>
        <!-- Log in File -->
        <File name="file" fileName="D:\\programing\\project\\java\\IdeaProject\\FanapCampus\\Jalase7\\src\\main\\java\\org\\example\\LogOnFiles\\log4j.log" >
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="TRACE" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="file" />
        </Root>
    </Loggers>
</Configuration>